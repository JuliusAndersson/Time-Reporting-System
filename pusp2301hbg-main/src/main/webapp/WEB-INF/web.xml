<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>Time Report System</display-name>

    <!-- Add the AuthenticationFilter -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>Configuration.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- Add your servlets and other filters here -->

</web-app>
